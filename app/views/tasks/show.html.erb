<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
<p>The task is completed</p>
<% else %>
<p>The task is not yet completed</p>
<% end %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<br>
<br>
<%= link_to "Back to list", tasks_path %>
<br>
<br>
<%= link_to "Edit task", edit_path %>
